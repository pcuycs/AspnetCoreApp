<script>
    $(document).ready(function () {
        
        console.log('load page ' + localStorage.userName);
        if (localStorage.remember && localStorage.remember != '') {
            $('#RememberMe').attr('checked', 'checked');
            $('#Email').val(localStorage.userName);
            $('#PassWord').val(localStorage.passWord);
        } else {
            $('#RememberMe').removeAttr('checked');
            $('#Email').val('');
            $('#PassWord').val('');
        }
        showHideButton();
        $("#RememberMe").click(function () {
            if ($('#RememberMe').is(':checked')) {
                console.log('checked + ' + localStorage.userName);
                localStorage.userName = $('#Email').val();
                localStorage.passWord = $('#PassWord').val();
                localStorage.remember = $('#RememberMe').val();

            }
            else {
                console.log('un-checked'  + localStorage.userName);
                localStorage.userName = '';
                localStorage.passWord = '';
                localStorage.remember = '';
            }
            console.log("ba me viet nam anh hung!");
        });
        $('#Email').keyup(function () {
            showHideButton();
        });
        $('#PassWord').keyup(function () {
            showHideButton();
        });

        function showHideButton() {
            if ($('#Email').val() === '' || $('#PassWord').val() === '') {
                $('#btnLogin').prop('disabled', true);

            }
            else {
                $('#btnLogin').prop('disabled', false);
            }
        }
    });
</script>


